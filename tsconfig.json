{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "module": "es6",
    "target": "es6",
    "allowJs": false, // true,
    "esModuleInterop": true,
    "importHelpers": true,
    "sourceMap": true,
    "jsx": "react",
    "typeRoots": [
      "node_modules/@types",
      "types"
    ],
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": [
    "types/*",
    "core/**/*"
  ]
}