{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "module": "es6",
    "target": "es6",
    "allowJs": false, // true,
    "esModuleInterop": true,
    "importHelpers": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "typeRoots": [
      "node_modules/@types",
      "types"
    ],
    "paths": {
      "images/*": [
        "./assets/images/*"
      ]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": [
    "types/*",
    "core/**/*",
    "tests/**/*"
  ]
}